read ${kafka:varint(0)}
read ${kafka:varint(4)}     # key length
read "key3"
read ${kafka:varint(12)}
read "Hello, again"
read ${kafka:varint(0)}

read ${kafka:varint(277)}
read [0x00]
read ${kafka:varint(0)}     # timestamp delta
read ${kafka:varint(1)}     # offset delta
read ${kafka:varint(4)}     # key length
read "key4"
read ${kafka:varint(266)}   # value length
read [0..266]               # value
read [0x00]     # headers

# Next fetch request
write 65


