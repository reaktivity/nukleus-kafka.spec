property nukleiRMN01N ${nuklei:directory("target/nukleus-itests").controlCapacity(1024, 1024)}

property controlRMN01N ${nukleiRMN01N.controlNew()}

connect "agrona://stream/bidirectional"
        option agrona:reader ${agrona:manyToOneReader(controlRMN01N.nukleus)}
        option agrona:writer ${agrona:broadcastTransmitter(controlRMN01N.controller)}

connected

read 0x00000001
read (long:correlationIdRMN01N1)
read ${core:string("kafka")}
read [0x01]
read [0..8] # authorization
read ${core:string("kafka#0")}
read ${core:string("target#0")}
read ${kafka:routeEx()
            .topicName("test")
            .build()}

write 0x40000001
write ${correlationIdRMN01N1}
write ${nukleus:newClientRouteId("kafka#0", "target#0")}
write flush

read 0x00000001
read (long:correlationIdRMN01N2)
read ${core:string("kafka")}
read [0x01]
read [0..8] # authorization
read ${core:string("kafka#0")}
read ${core:string("target#1")}
read ${kafka:routeEx()
            .topicName("test")
            .build()}

write 0x40000001
write ${correlationIdRMN01N2}
write ${nukleus:newClientRouteId("kafka#0", "target#1")}
write flush

close
closed
