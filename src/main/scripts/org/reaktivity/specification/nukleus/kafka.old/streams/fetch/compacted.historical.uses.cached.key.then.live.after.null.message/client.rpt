property applicationConnect "nukleus://streams/kafka#0"
property applicationConnectWindow 4096

connect await ROUTED_CLIENT
        ${applicationConnect}
    option nukleus:window ${applicationConnectWindow}
    option nukleus:transmission "half-duplex"

write nukleus:begin.ext ${kafka:beginEx()
                               .typeId(nukleus:id("kafka"))
                               .topicName("test")
                               .fetchOffset(0)
                               .fetchKey("match")
                               .build()}

connected

write notify CLIENT_ONE_CONNECTED

read nukleus:begin.ext ${kafka:beginEx()
                              .typeId(nukleus:id("kafka"))
                              .topicName("test")
                              .fetchOffset(0)
                              .fetchKey("match")
                              .build()}

read nukleus:data.ext ${kafka:matchDataEx()
                             .typeId(nukleus:id("kafka"))
                             .fetchOffset(1)
                             .messageKey("match")
                             .build()}
read "Hello second"

read nukleus:data.ext ${kafka:matchDataEx()
                             .typeId(nukleus:id("kafka"))
                             .fetchOffset(2)
                             .messageKey("match")
                             .build()}
read nukleus:data.null

write notify CLIENT_ONE_RECEIVED_NULL_MESSAGE

connect await CLIENT_ONE_RECEIVED_NULL_MESSAGE
        ${applicationConnect}
    option nukleus:window ${applicationConnectWindow}
    option nukleus:transmission "half-duplex"

write nukleus:begin.ext ${kafka:beginEx()
                               .typeId(nukleus:id("kafka"))
                               .topicName("test")
                               .fetchOffset(0)
                               .fetchKey("match")
                               .build()}

connected

read nukleus:begin.ext ${kafka:beginEx()
                              .typeId(nukleus:id("kafka"))
                              .topicName("test")
                              .fetchOffset(0)
                              .fetchKey("match")
                              .build()}

read notify CLIENT_TWO_CONNECTED

connect await CLIENT_TWO_CONNECTED
        ${applicationConnect}
    option nukleus:window ${applicationConnectWindow}
    option nukleus:transmission "half-duplex"

write nukleus:begin.ext ${kafka:beginEx()
                               .typeId(nukleus:id("kafka"))
                               .topicName("test")
                               .fetchOffset(0)
                               .fetchKey("match")
                               .build()}

connected

read nukleus:begin.ext ${kafka:beginEx()
                              .typeId(nukleus:id("kafka"))
                              .topicName("test")
                              .fetchOffset(0)
                              .fetchKey("match")
                              .build()}
