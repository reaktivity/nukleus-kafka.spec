property applicationConnect "nukleus://streams/kafka#0"

connect await ROUTED_CLIENT
        ${applicationConnect}
    option nukleus:window 8192
    option nukleus:transmission "half-duplex"

write nukleus:begin.ext ${kafka:beginEx()
                               .typeId(nukleus:id("kafka"))
                               .fetch()
                                   .topic("test")
                                   .progress(-1, -1)
                                   .filter()
                                       .header("header1", "value1")
                                       .build()
                                   .filter()
                                       .header("header2", "value2")
                                       .build()
                                   .build()
                               .build()}

connected

read nukleus:begin.ext ${kafka:beginEx()
                              .typeId(nukleus:id("kafka"))
                              .fetch()
                                  .topic("test")
                                  .progress(0, 1)
                                  .progress(1, 1)
                                  .progress(-1, -1)
                                  .filter()
                                      .header("header1", "value1")
                                      .build()
                                  .filter()
                                      .header("header2", "value2")
                                      .build()
                                  .build()
                              .build()}

read nukleus:data.ext ${kafka:matchDataEx()
                             .typeId(nukleus:id("kafka"))
                             .fetch()
                                 .key("key1")
                                 .header("header2", "value2")
                                 .progress(0, 2)
                                 .progress(1, 1)
                                 .progress(-1, -1)
                                 .build()
                             .build()}
read "Hello, world #A1"

read nukleus:data.ext ${kafka:matchDataEx()
                             .typeId(nukleus:id("kafka"))
                             .fetch()
                                 .header("header1", "value1")
                                 .header("header2", "value2")
                                 .progress(0, 2)
                                 .progress(1, 2)
                                 .progress(-1, -1)
                                 .build()
                             .build()}
read "Hello, world #B1"

read nukleus:data.ext ${kafka:matchDataEx()
                             .typeId(nukleus:id("kafka"))
                             .fetch()
                                 .header("header1", "value1")
                                 .progress(0, 3)
                                 .progress(1, 2)
                                 .progress(-1, -1)
                                 .build()
                             .build()}
read "Hello, world #A2"

read nukleus:data.ext ${kafka:matchDataEx()
                             .typeId(nukleus:id("kafka"))
                             .fetch()
                                 .key("key1")
                                 .header("header1", "value1")
                                 .progress(0, 3)
                                 .progress(1, 3)
                                 .progress(-1, -1)
                                 .build()
                             .build()}
read "Hello, world #B2"

read nukleus:data.ext ${kafka:matchDataEx()
                             .typeId(nukleus:id("kafka"))
                             .fetch()
                                 .key("key1")
                                 .header("header1", "value1")
                                 .progress(0, 4)
                                 .progress(1, 3)
                                 .progress(-1, -1)
                                 .build()
                             .build()}
read "Hello, world #A3"

read nukleus:data.ext ${kafka:matchDataEx()
                             .typeId(nukleus:id("kafka"))
                             .fetch()
                                 .header("header1", "value1")
                                 .progress(0, 4)
                                 .progress(1, 4)
                                 .progress(-1, -1)
                                 .build()
                             .build()}
read "Hello, world #B3"

read nukleus:data.ext ${kafka:matchDataEx()
                             .typeId(nukleus:id("kafka"))
                             .fetch()
                                 .header("header1", "value1")
                                 .header("header2", "value2")
                                 .progress(0, 5)
