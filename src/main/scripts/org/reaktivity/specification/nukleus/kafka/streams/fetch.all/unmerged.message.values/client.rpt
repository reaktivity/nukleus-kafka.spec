property applicationConnect "nukleus://streams/kafka#0"

connect await ROUTED_CLIENT
        ${applicationConnect}
    option nukleus:window 8192
    option nukleus:transmission "half-duplex"

write nukleus:begin.ext ${kafka:beginEx()
                               .typeId(nukleus:id("kafka"))
                               .meta()
                                   .topic("test")
                                   .build()
                               .build()}

connected

read nukleus:begin.ext ${kafka:beginEx()
                              .typeId(nukleus:id("kafka"))
                              .meta()
                                  .topic("test")
                                  .build()
                              .build()}

read nukleus:data.ext ${kafka:dataEx()
                             .typeId(nukleus:id("kafka"))
                             .meta()
                                 .partition(0, 1)
                                 .partition(1, 2)
                                 .build()
                             .build()}
read notify PARTITION_COUNT_2

read nukleus:data.ext ${kafka:dataEx()
                             .typeId(nukleus:id("kafka"))
                             .meta()
                                 .partition(0, 1)
                                 .partition(1, 2)
                                 .partition(2, 3)
                                 .build()
                             .build()}
read notify PARTITION_COUNT_3

connect await PARTITION_COUNT_2
        ${applicationConnect}
    option nukleus:window 8192
    option nukleus:transmission "half-duplex"

write nukleus:begin.ext ${kafka:beginEx()
                               .typeId(nukleus:id("kafka"))
                               .fetch()
                                   .topic("test")
                                   .progress(0, -1)
                                   .build()
                               .build()}

connected

read nukleus:begin.ext ${kafka:beginEx()
                              .typeId(nukleus:id("kafka"))
                              .fetch()
                                  .topic("test")
                                  .progress(0, 1)
                                  .build()
                              .build()}

read nukleus:data.ext ${kafka:matchDataEx()
                             .typeId(nukleus:id("kafka"))
                             .fetch()
                                 .progress(0, 2)
                                 .build()
                             .build()}
read "Hello, world #A1"

read nukleus:data.ext ${kafka:matchDataEx()
                             .typeId(nukleus:id("kafka"))
                             .fetch()
                                 .progress(0, 3)
                                 .build()
                             .build()}
read "Hello, world #A2"

connect await PARTITION_COUNT_2
        ${applicationConnect}
    option nukleus:window 8192
    option nukleus:transmission "half-duplex"

write nukleus:begin.ext ${kafka:beginEx()
                               .typeId(nukleus:id("kafka"))
                               .fetch()
                                   .topic("test")
                                   .progress(1, -1)
                                   .build()
                               .build()}

connected

read nukleus:begin.ext ${kafka:beginEx()
                              .typeId(nukleus:id("kafka"))
                              .fetch()
                                  .topic("test")
                                  .progress(1, 1)
                                  .build()
                              .build()}

read nukleus:data.ext ${kafka:matchDataEx()
                             .typeId(nukleus:id("kafka"))
                             .fetch()
                                 .progress(1, 2)
                                 .build()
                             .build()}
read "Hello, world #B1"

read nukleus:data.ext ${kafka:matchDataEx()
                             .typeId(nukleus:id("kafka"))
                             .fetch()
                                 .progress(1, 3)
                                 .build()
                             .build()}
read "Hello, world #B2"

connect await PARTITION_COUNT_3
        ${applicationConnect}
    option nukleus:window 8192
    option nukleus:transmission "half-duplex"

write nukleus:begin.ext ${kafka:beginEx()
                               .typeId(nukleus:id("kafka"))
                               .fetch()
                                   .topic("test")
                                   .progress(2, -1)
                                   .build()
                               .build()}

connected

read nukleus:begin.ext ${kafka:beginEx()
                              .typeId(nukleus:id("kafka"))
                              .fetch()
                                  .topic("test")
                                  .progress(2, 1)
                                  .build()
                              .build()}

read nukleus:data.ext ${kafka:matchDataEx()
                             .typeId(nukleus:id("kafka"))
                             .fetch()
                                 .progress(2, 2)
                                 .build()
                             .build()}
read "Hello, world #C1"

read nukleus:data.ext ${kafka:matchDataEx()
                             .typeId(nukleus:id("kafka"))
                             .fetch()
                                 .progress(2, 3)
                                 .build()
                             .build()}
read "Hello, world #C2"
