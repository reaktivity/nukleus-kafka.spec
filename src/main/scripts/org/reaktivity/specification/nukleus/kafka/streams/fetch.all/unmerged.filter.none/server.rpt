property serverAddress "nukleus://streams/kafka#0"

property deltaMillis 0L
property newTimestamp ${kafka:timestamp() + deltaMillis}

accept ${serverAddress}
    option nukleus:window 8192
    option nukleus:transmission "half-duplex"

accepted

read nukleus:begin.ext ${kafka:beginEx()
                              .typeId(nukleus:id("kafka"))
                              .meta()
                                  .topic("test")
                                  .build()
                              .build()}

connected

write nukleus:begin.ext ${kafka:beginEx()
                               .typeId(nukleus:id("kafka"))
                               .meta()
                                   .topic("test")
                                   .build()
                               .build()}
write flush

write nukleus:data.ext ${kafka:dataEx()
                              .typeId(nukleus:id("kafka"))
                              .meta()
                                  .partition(0, 1)
                                  .partition(1, 2)
                                  .build()
                              .build()}
write flush

accepted

read nukleus:begin.ext ${kafka:beginEx()
                              .typeId(nukleus:id("kafka"))
                              .fetch()
                                  .topic("test")
                                  .progress(0, -1)
                                  .build()
                              .build()}

connected

write nukleus:begin.ext ${kafka:beginEx()
                               .typeId(nukleus:id("kafka"))
                               .fetch()
                                   .topic("test")
                                   .progress(0, 1)
                                   .build()
                               .build()}
write flush

write nukleus:data.ext ${kafka:dataEx()
                              .typeId(nukleus:id("kafka"))
                              .fetch()
                                  .timestamp(newTimestamp)
                                  .key("key1")
                                  .header("header2", "value2")
                                  .progress(0, 2)
                                  .build()
                              .build()}
write "Hello, world #A1"
write flush
write notify SENT_MESSAGE_A1

write await SENT_MESSAGE_B1
write nukleus:data.ext ${kafka:dataEx()
                              .typeId(nukleus:id("kafka"))
                              .fetch()
                                  .timestamp(newTimestamp)
                                  .header("header1", "value1")
                                  .progress(0, 3)
                                  .build()
                              .build()}
write "Hello, world #A2"
write flush
write notify SENT_MESSAGE_A2

write await SENT_MESSAGE_B2
write nukleus:data.ext ${kafka:dataEx()
                              .typeId(nukleus:id("kafka"))
                              .fetch()
                                  .timestamp(newTimestamp)
                                  .key("key1")
                                  .header("header1", "value1")
                                  .progress(0, 4)
                                  .build()
                              .build()}
write "Hello, world #A3"
write flush
write notify SENT_MESSAGE_A3

write await SENT_MESSAGE_B3
write nukleus:data.ext ${kafka:dataEx()
                              .typeId(nukleus:id("kafka"))
                              .fetch()
                                  .timestamp(newTimestamp)
                                  .header("header1", "value1")
                                  .header("header2", "value2")
                                  .progress(0, 5)
                                  .build()
                              .build()}
write "Hello, world #A4"
write flush
write notify SENT_MESSAGE_A4

accepted

read nukleus:begin.ext ${kafka:beginEx()
                              .typeId(nukleus:id("kafka"))
                              .fetch()
                                  .topic("test")
                                  .progress(1, -1)
                                  .build()
                              .build()}

connected

write nukleus:begin.ext ${kafka:beginEx()
                               .typeId(nukleus:id("kafka"))
                               .fetch()
                                   .topic("test")
                                   .progress(1, 1)
                                   .build()
                               .build()}
write flush

write await SENT_MESSAGE_A1
write nukleus:data.ext ${kafka:dataEx()
                              .typeId(nukleus:id("kafka"))
                              .fetch()
                                  .header("header1", "value1")
                                  .header("header2", "value2")
                                  .progress(1, 2)
                                  .build()
                              .build()}
write "Hello, world #B1"
write flush
write notify SENT_MESSAGE_B1

write await SENT_MESSAGE_A2
write nukleus:data.ext ${kafka:dataEx()
                              .typeId(nukleus:id("kafka"))
                              .fetch()
                                  .key("key1")
                                  .header("header1", "value1")
                                  .progress(1, 3)
                                  .build()
                              .build()}
write "Hello, world #B2"
write flush
write notify SENT_MESSAGE_B2

write await SENT_MESSAGE_A3
write nukleus:data.ext ${kafka:dataEx()
                              .typeId(nukleus:id("kafka"))
                              .fetch()
                                  .header("header1", "value1")
                                  .progress(1, 4)
                                  .build()
                              .build()}
write "Hello, world #B3"
write flush
write notify SENT_MESSAGE_B3

write await SENT_MESSAGE_A4
write nukleus:data.ext ${kafka:dataEx()
                              .typeId(nukleus:id("kafka"))
                              .fetch()
                                  .key("key1")
                                  .header("header2", "value2")
                                  .progress(1, 5)
                                  .build()
                              .build()}
write "Hello, world #B4"
write flush
write notify SENT_MESSAGE_B4
