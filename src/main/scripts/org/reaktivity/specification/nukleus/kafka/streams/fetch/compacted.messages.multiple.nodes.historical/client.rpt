property applicationConnect "nukleus://streams/kafka#0"
property applicationConnectWindow1 8192
property applicationConnectWindow2 8192

connect await CONNECT_CLIENT_ONE
        ${applicationConnect}
    option nukleus:window ${applicationConnectWindow1}
    option nukleus:update "none"
    option nukleus:transmission "half-duplex"

write nukleus:begin.ext ${kafka:beginEx()
                               .typeId(nukleus:id("kafka"))
                               .topicName("test")
                               .fetchOffset(0)
                               .build()}

connected

read nukleus:begin.ext ${kafka:beginEx()
                              .typeId(nukleus:id("kafka"))
                              .topicName("test")
                              .fetchOffset(0)
                              .build()}

read nukleus:data.ext ${kafka:matchDataEx()
                             .typeId(nukleus:id("kafka"))
                             .fetchOffset(1, 0)
                             .messageKey("key1")
                             .build()}
read "Hello, world"

read nukleus:data.ext ${kafka:matchDataEx()
                             .typeId(nukleus:id("kafka"))
                             .fetchOffset(2, 0)
                             .messageKey("key2")
                             .build()}
read [0..1]
read notify CLIENT_ONE_DATA_RECEIVED

# Rest of messages are not received because of the connect option nukleus:update "none"

connect await CONNECT_CLIENT_TWO
        ${applicationConnect}
    option nukleus:window ${applicationConnectWindow2}
    option nukleus:transmission "half-duplex"

write nukleus:begin.ext ${kafka:beginEx()
                               .typeId(nukleus:id("kafka"))
                               .topicName("test")
                               .fetchOffset(0)
                               .build()}

connected

read nukleus:begin.ext ${kafka:beginEx()
                              .typeId(nukleus:id("kafka"))
                              .topicName("test")
                              .fetchOffset(0)
                              .build()}

read nukleus:data.ext ${kafka:matchDataEx()
                             .typeId(nukleus:id("kafka"))
                             .fetchOffset(1, 0)
                             .messageKey("key1")
                             .build()}
read "Hello, world"

read nukleus:data.ext ${kafka:matchDataEx()
                             .typeId(nukleus:id("kafka"))
                             .fetchOffset(1, 1)
                             .messageKey("key3")
                             .build()}
read "Hello, again"

read nukleus:data.ext ${kafka:matchDataEx()
                             .typeId(nukleus:id("kafka"))
                             .fetchOffset(2, 1)
                             .messageKey("key2")
                             .build()}
read [0..266]

read nukleus:data.ext ${kafka:matchDataEx()
                             .typeId(nukleus:id("kafka"))
                             .fetchOffset(2, 2)
                             .messageKey("key4")
                             .build()}
read [0..266]
